<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lukman.beautyfullombok.Profil">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@drawable/backgroundgradien">
                <ImageView
                    android:id="@+id/imgProfil"
                    android:layout_marginTop="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/lukman_photo"/>
                <TextView
                    android:textAppearance="?android:textAppearanceMedium"
                    android:id="@+id/textLukman"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:layout_below="@+id/imgProfil"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lukman"/>
            <TextView
                android:textColor="@color/lighGrey"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_below="@+id/textLukman"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Android Developer"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                            <TextView
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="Photos"/>
                            <TextView
                                android:fontFamily="monospace"
                                android:textStyle="bold"
                                android:textColor="@color/endBlue"
                                android:gravity="center_horizontal"
                                android:textAppearance="?android:textAppearanceMedium"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="200"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Followers"/>
                        <TextView
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:textColor="@color/endBlue"
                            android:gravity="center_horizontal"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="20"/>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">
                        <TextView
                            android:fontFamily="monospace"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="Following"/>
                        <TextView
                            android:fontFamily="monospace"
                            android:textStyle="bold"
                            android:textColor="@color/endBlue"
                            android:gravity="center_horizontal"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="500k"/>

                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_email"/>
            <TextView
                android:textColor="@color/hitamTransparant"
                android:gravity="center_vertical"
                android:text="lukman821@gmail.com"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>


        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="center"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_phone"/>
            <TextView
                android:textColor="@color/hitamTransparant"
                android:gravity="center_vertical"
                android:text="083129570067"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="center"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_pin"/>
            <TextView
                android:textColor="@color/hitamTransparant"
                android:gravity="center_vertical"
                android:text="Nusa Tenggara Barat"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="center"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_date"/>
            <TextView
                android:textColor="@color/hitamTransparant"
                android:gravity="center_vertical"
                android:text="08 Januari 1996"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="center"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_love"/>
            <TextView
                android:textColor="@color/hitamTransparant"
                android:gravity="center_vertical"
                android:text="Punya Pacar Kok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="bottom|right">
        <ImageButton
            android:background="@color/transparan"
            android:id="@+id/keluar"
            android:padding="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/endBlue"
            android:src="@drawable/ic_close"/>
    </LinearLayout>



</LinearLayout>
